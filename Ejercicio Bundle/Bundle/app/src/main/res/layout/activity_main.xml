<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/main_tx_nombre"
        android:layout_width="190dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="247dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/main_tx_nombre"
        app:layout_constraintEnd_toStartOf="@+id/main_bt_enviar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_bt_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="3dp"
        android:text="@string/main_bt_enviar"
        app:layout_constraintBottom_toBottomOf="@+id/main_tx_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_tx_nombre" />
</androidx.constraintlayout.widget.ConstraintLayout>